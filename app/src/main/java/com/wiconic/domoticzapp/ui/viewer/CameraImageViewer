package com.wiconic.domoticzapp.ui.viewer

import android.content.Context
import android.util.Log
import android.widget.ImageView
import androidx.swiperefreshlayout.widget.SwipeRefreshLayout

class CameraImageViewer(
    private val context: Context,
    private val cameraImageView: ImageView,
    private val swipeRefreshLayout: SwipeRefreshLayout
) {

    init {
        swipeRefreshLayout.setOnRefreshListener { onImageLoading() }
    }

    fun onImageLoading() {
        swipeRefreshLayout.isRefreshing = true
    }

    fun displayImage(imageData: String) {
        // Assuming you're converting a base64 string or URL to an actual image
        swipeRefreshLayout.isRefreshing = false
        Log.d(TAG, "Image displayed successfully.")
    }

    companion object {
        private const val TAG = "CameraImageViewer"
    }
}
